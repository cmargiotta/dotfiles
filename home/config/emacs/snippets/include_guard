# key: include_guard
# name: C++ auto header include guard in project
# --

#ifndef ${1:`(upcase
              (concat
               (projectile-project-name)
               "_"
               (subst-char-in-string ?/ ?_
                                     (file-relative-name
                                      (file-name-sans-extension buffer-file-name)
                                      (projectile-project-root)))))`_HPP_}
#define $1

$0

#endif /* $1 */